<% provide(:title, "Home") %>

<div class="row">
  <div class="col-md-6 col-lg-6 col-md-push-6">
    <p class="main-greeting">Hello,</p>
    <p class="smaller-greeting">a bit about me...</p>

    <div class="row three">
      <div class="col-md-12 col-xs-12 nopadding">
      <%= link_to about_path do %>
        <div class="circle circle1">
          <div class="circletext">ABOUT</div >
        </div>
        <% end %>
        <%= link_to posts_path do %>
        <div class="circle circle2">
          <div class="circletext">BLOG</div >
        </div>
        <% end %>
        <%= link_to projects_path do %>
        <div class="circle circle3">
          <div class="circletext">PROJECTS</div >
        </div>
        <% end %>
      </div>
    </div><!-- end 3 circles -->

    <div class="hidden-sm hidden-xs visible-md visible-lg about">
      <%= render 'static_pages/blurb' %>
    </div>
  </div><!-- end second column -->

  <div class="col-md-6 col-md-pull-6 big-circle">
    <div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">

            <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= image_tag("lake.png", class: "img-responsive main-img img-circle") %>
        </div>

        <div class="item">
          <%= image_tag("yosemite.png", class: "img-responsive main-img img-circle") %>
        </div>

        <div class="item">
          <%= image_tag("ridge.png", class: "img-responsive main-img img-circle") %>
        </div>

        <div class="item">
          <%= image_tag("halfdome.png", class: "img-responsive main-img img-circle") %>
        </div>
      </div>
    </div><!-- end carousel-->
    <div class="about visible-sm visible-xs hidden-md hidden-lg">
      <%= render 'static_pages/blurb' %>
    </div>
  </div>
</div><!-- end row -->
<!-- end outer row -->
