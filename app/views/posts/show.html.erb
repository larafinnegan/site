
        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-7 col-md-offset-1">

                <!-- Blog Post -->

                <!-- Title -->
                <h2><%= @post.title %></h2>
                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @post.created_at.strftime("%b %d, %Y") %></p>
                <hr>

                <!-- Post Content -->
                <p class="lead"><%= @post.content %></p>
                <hr>

                <!-- Blog Comments -->

                <!-- Comments Form -->
                    <div class="well">
                    <h4>Leave a Comment:</h4>
                        <%= form_for [@post, @post.comments.new] do |f| %>
                        <div class="field">
                            <%= f.text_field :author %>
                        </div><br/>
                        <div class="field">
                            <%= f.text_area :content, class: "form-control" %><br/>
                        </div>
                        <%= f.submit "Submit", class: "btn btn-primary" %>
                    <% end %>
                </div>

                <hr>

                <!-- Posted Comments -->

                <!-- Comment -->
                <% @post.comments.find_each do |comment| %>
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"><%= comment.author %>
                            <small>replied at <%= comment.created_at.strftime("%b %d, %Y") %></small>
                        </h4>
                        <%= comment.content %>
                    </div>
                </div>
                <% end %>

                <!-- Comment -->

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                        </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
