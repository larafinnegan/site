<% provide(:title, "Blog") %>

<% if logged_in? %>
  <%= (link_to "Create a new post", new_post_path) %>
<% end %>

<div class="row">
    <!-- Blog Entries Column -->
    <div class="col-md-7 col-md-offset-1">
        <%= render @posts %>

        <%= will_paginate %>
    </div>

    <!-- Blog Sidebar Widgets Column -->
    <%= render "posts/sidebar" %>
</div>
<!-- /.row -->
